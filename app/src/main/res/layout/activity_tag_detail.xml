<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.TagDetailActivity">

    <TextView
        android:id="@+id/tag_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无标题"
        android:textSize="40sp"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="35dp"/>

    <TextView
        android:id="@+id/tag_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无描述 "
        android:textSize="30sp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="35dp"/>

    <Button
        android:id="@+id/tag_detail_button_update_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改描述"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="15dp"/>

    <Button
        android:id="@+id/tag_detail_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除标签"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="15dp"/>

    <Button
        android:id="@+id/tag_detail_button_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回主页"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="15dp"/>

</LinearLayout>
